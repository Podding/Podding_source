- if mode == "mini-date"
  section class=["episodeListContainer","episodeListContainer--#{ list_status }"]
    - if locals.has_key?( :list_label )
      h3.episodeList-heading
        i.episodeList-heading-icon class="icon-#{ list_icon }"
        span.episodeList-heading-text #{ list_label }
    ul.episodeListMini
      - for episode in episodes
        == slim :"includes/_episode", :locals => { :episode => episode, :mode => "mini-date" }

        - if locals.has_key?( :more_link ) # you can pass an optional more-link to this partial
         li.episodeListMini-moreLink 
          a.basicLink href="#{ more_link }"
            |  mehr... <i class="icon-circle-arrow-right"></i>

- elsif mode == "archive"
  section class=["episodeList","episodeListArchive"]
    - if locals.has_key?( :list_label )
      h3.episodeListArchive-heading #{ list_label }

    - for episode in episodes
      == slim :"includes/_episode", :locals => { :episode => episode, :mode => "archive" }

- elsif mode == "short"
  section class=["episodeList","episodeList--#{ list_status }","episodeListShort"]
